<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.anuraag.intro.Edit">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Edit Subject Line"
        android:ems="10"
        android:textColor="#b5b5bb"
        android:gravity="left"
        android:padding="15dp"
        android:id="@+id/email"
        android:fontFamily="sans-serif-light"
        android:background="#e6e6e6"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meetingPlace"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:height="130dp"
        android:textColor="#b5b5bb"
        android:fontFamily="sans-serif-light"
        android:gravity="left"
        android:layout_marginTop="15dp"
        android:hint="Edit Body"
        android:background="#e6e6e6"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit your message"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:id="@+id/textView"
        android:textColor="#6544a1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:background="#6544a1"
        android:id="@+id/submit"
        android:layout_below="@+id/meetingPlace" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="220dp"
        android:textColor="@android:color/white"
        android:background="#6544a1"
        android:id="@+id/cancel"
        android:layout_below="@+id/meetingPlace" />


</RelativeLayout>
