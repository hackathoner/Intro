<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.anuraag.intro.Edit">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meetingPlace"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:height="130dp"
        android:textColor="#b5b5bb"
        android:fontFamily="sans-serif-light"
        android:gravity="left"
        android:hint="Edit Body"
        android:background="#e6e6e6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:background="#6544a1"
        android:id="@+id/submit"
        android:layout_below="@+id/meetingPlace" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:background="#6544a1"
        android:id="@+id/cancel"
        android:layout_alignTop="@+id/submit"
        android:layout_alignRight="@+id/meetingPlace" />


</RelativeLayout>
